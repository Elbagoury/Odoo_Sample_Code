<?xml version="1.0" encoding="utf-8"?>

<odoo>
	<data>
		<template id="website_journal_inherited" name="web_ass_inherit"
			inherit_id="website.assets_frontend">
			<xpath expr="." position="inside">
				<link rel="stylesheet"
					href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"></link>
				<link rel="stylesheet" href="/shc_website/static/src/css/style.css" />
				<link rel="stylesheet" href="/shc_website/static/src/css/styles.css" />
				<!-- <link rel="stylesheet" href="/shc_website/static/src/css/base.css" 
					/> -->
			</xpath>
		</template>

		<template id="clean_script" inherit_id="website.assets_frontend"
			name="Clean scripts">
			<xpath expr="/t" position="inside">
				<script type="text/javascript" src="/shc_website/static/src/js/custom.js" />
			</xpath>
		</template>

		<template id="index" name="Home" inherit_id="website.homepage"
			customize_show="True">
			<xpath expr="//div[@id='wrap']" position="replace">
				<div style="position: relative;top:54px;">
					<div style="float:left;width:33%;position: relative;left: 70px;">
						<img src="/shc_website/static/src/img/header1.png" alt="Chania"
							width="25%" height="10%">
						</img>
					</div>
					<div
						style="display: inline-block;margin:0 auto;width:33%;top: 24px;position: relative;">
						<img src="/shc_website/static/src/img/header2.png" alt="Chania"
							width="55%" height="10%">
						</img>
					</div>
					<div style="float:right;width:33%">
						<img src="/shc_website/static/src/img/header3.png" alt="Chania"
							width="23%" height="10%" style="position: relative;left: 190px;top: 5px;">
						</img>
					</div>
				</div>
				<br />
				<br />
				<br />
				<br />
				<br />
				<div class="tp-banner">
					<div id="myCarousel" class="carousel slide" style="height:480px;"
						data-ride="carousel">

						<ol class="carousel-indicators">
							<li data-target="#myCarousel" data-slide-to="0" class="active"></li>
							<li data-target="#myCarousel" data-slide-to="1"></li>
						</ol>
						<div class="carousel-inner" role="listbox">
							<div class="item active">
								<img src="/shc_website/static/src/img/Airport-Station-16.jpg"
									alt="Chania" width="1490" height="500">
								</img>
							</div>
							<div class="item">
								<img src="/shc_website/static/src/img/admin-building.jpg"
									alt="Chania" width="1490" height="500">
								</img>
							</div>
							<div class="item">
								<img src="/shc_website/static/src/img/Elevated-Viaduct.jpg"
									alt="Chania" width="1490" height="500">
								</img>
							</div>
							<div class="item">
								<img src="/shc_website/static/src/img/Thiru-MVekaiah-Naidu.jpg"
									alt="Chania" width="1490" height="500">
								</img>
							</div>
							<div class="item">
								<img src="/shc_website/static/src/img/banner.jpg" alt="Chania"
									width="1490" height="500">
								</img>
							</div>
							<div class="item">
								<img src="/shc_website/static/src/img/cm.jpg" alt="Chania"
									width="1490" height="500">
								</img>
							</div>
							<div class="item">
								<img src="/shc_website/static/src/img/cmrl1.jpg" alt="Chania"
									width="1490" height="500">
								</img>
							</div>
						</div>
						<br />
						<br />
						<br />
						<br />
						<br />
						<div>
							<div style="float:left;width:33%;position: relative;left: 70px;">
								<p>Test</p>
							</div>
							<div
								style="display: inline-block;margin:0 auto;width:33%;top: 24px;position: relative;">
								<p>Test2</p>
							</div>
							<div style="float:right;width:33%">
								<p>Test3</p>
							</div>
						</div>
						<!-- Left and right controls -->
						<a class="left carousel-control" href="#myCarousel" role="button"
							data-slide="prev">
							<span class="glyphicon glyphicon-chevron-left"
								aria-hidden="true"></span>
							<span class="sr-only">Previous</span>
						</a>
						<a class="right carousel-control" href="#myCarousel" role="button"
							data-slide="next">
							<span class="glyphicon glyphicon-chevron-right"
								aria-hidden="true"></span>
							<span class="sr-only">Next</span>
						</a>
					</div>
				</div>
			</xpath>
		</template>
